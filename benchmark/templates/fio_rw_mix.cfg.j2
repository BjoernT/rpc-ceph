[global]
clocksource=clock_gettime
randrepeat=0
runtime=180
offset_increment=100g

[sequential-write]
bs={{ item.blocksize | default("1M") }}
ioengine=libaio
direct=1
iodepth={{ item.iodepth | default(8) }}
numjobs={{ item.numjobs | default(1) }}
filename={{ bench_direct_device_name }}
do_verify=0
rw=write
rwmixread=0
rwmixwrite=100

[sequential-read]
bs={{ item.blocksize | default("1M") }}
ioengine=libaio
direct=1
iodepth={{ item.iodepth | default(8) }}
numjobs={{ item.numjobs | default(1) }}
filename={{ bench_direct_device_name }}
do_verify=0
rw=read
rwmixread=100
rwmixwrite=0
